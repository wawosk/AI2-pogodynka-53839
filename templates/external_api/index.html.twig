{% extends 'base.html.twig' %}

{% block title %}Weather Forecast{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Weather Forecast</h1>

        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.latitude) }}
                {{ form_widget(form.latitude) }}
            </div>
            <div class="form-group">
                {{ form_label(form.longitude) }}
                {{ form_widget(form.longitude) }}
            </div>
        </div>
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}

        {% if weather_data %}
            <h2>Weather Forecast for {{ weather_data.latitude|round(2) }}째N, {{ weather_data.longitude|round(2) }}째E</h2>

            <div class="weather-info">
                <table class="weather-table">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Max Temp (째C)</th>
                        <th>Min Temp (째C)</th>
                        <th>Precipitation (mm)</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for i in 0..weather_data.daily.time|length - 1 %}
                        <tr>
                            <td>{{ weather_data.daily.time[i] }}</td>
                            <td>{{ weather_data.daily.temperature_2m_max[i] }}</td>
                            <td>{{ weather_data.daily.temperature_2m_min[i] }}</td>
                            <td>{{ weather_data.daily.precipitation_sum[i] }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 900px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        .form-group {
            flex: 1;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-group input {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .weather-info {
            margin-top: 30px;
        }
        .weather-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .weather-table th,
        .weather-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }
        .weather-table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }
        .weather-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %}

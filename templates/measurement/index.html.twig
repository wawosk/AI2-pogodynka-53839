{% extends 'base.html.twig' %}

{% block title %}Measurement index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Measurement index</h1>
        <div>
            <a href="{{ path('app_location_index') }}" class="btn btn-info">Go to Locations</a>
            {% if is_granted('ROLE_MEASUREMENT_NEW') %}
                <a href="{{ path('app_measurement_new') }}" class="btn btn-success">Create new Measurement</a>
            {% endif %}
        </div>
    </div>

    <table class="table table-striped">
        <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Day</th>
            <th>Rainprob</th>
            <th>Humidity</th>
            <th>Forecast</th>
            <th>Wind</th>
            <th>Celsius</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for measurement in measurements %}
            <tr>
                <td>{{ measurement.id }}</td>
                <td>{{ measurement.day ? measurement.day|date('Y-m-d') : '' }}</td>
                <td>{{ measurement.rainprob }}</td>
                <td>{{ measurement.humidity }}</td>
                <td>{{ measurement.forecast }}</td>
                <td>{{ measurement.wind }}</td>
                <td>{{ measurement.celsius }}</td>
                <td>
                    <div class="btn-group" role="group">
                        {% if is_granted('ROLE_MEASUREMENT_SHOW') %}
                            <a href="{{ path('app_measurement_show', {'id': measurement.id}) }}" class="btn btn-sm btn-outline-primary">show</a>
                        {% endif %}
                        {% if is_granted('ROLE_MEASUREMENT_EDIT') %}
                            <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}" class="btn btn-sm btn-outline-secondary">edit</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_location_index') }}" class="btn btn-info">Go to Locations</a>
        {% if is_granted('ROLE_MEASUREMENT_NEW') %}
            <a href="{{ path('app_measurement_new') }}" class="btn btn-success">Create new Measurement</a>
        {% endif %}
    </div>
{% endblock %}
